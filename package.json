{
  "name": "querypie-docs",
  "version": "25.08.1",
  "private": true,
  "description": "QueryPie Docs",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "postbuild": "npm run generate-pagefind && npm run generate-sitemap",
    "start": "next start",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "format": "npx prettier --write .",
    "generate-pagefind": "pagefind --site .next/server/app --output-path public/_pagefind",
    "generate-sitemap": "npx tsx scripts/generate-sitemap/index.ts",
    "fetch-openapi-spec": "npx tsx scripts/fetch-openapi-spec/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/querypie/querypie-docs.git"
  },
  "author": "QueryPie",
  "bugs": {
    "url": "https://github.com/querypie/querypie-docs/issues"
  },
  "homepage": "https://github.com/querypie/querypie-docs#readme",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@next/third-parties": "^16.0.10",
    "@theguild/remark-mermaid": "^0.3.0",
    "gray-matter": "^4.0.3",
    "next": "^16.0.10",
    "nextra": "^4.6.1",
    "nextra-theme-docs": "^4.6.1",
    "pino": "^10.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rehype-attr": "^4.1.1",
    "remark-gfm": "^4.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.10",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jsdom": "^27.3.0",
    "pagefind": "^1.4.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
